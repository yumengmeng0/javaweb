<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    servlet配置-->
    <servlet>
        <!--        sevlet的别名，习惯上用类名命名-->
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cn.com.libery.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <!--        sevlet的别名，习惯上用类名命名-->
        <servlet-name>HelloGenericServlet</servlet-name>
        <servlet-class>cn.com.libery.servlet.HelloGenericServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloGenericServlet</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloHttpServlet</servlet-name>
        <servlet-class>cn.com.libery.servlet.HelloHttpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloHttpServlet</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ConfigServlet</servlet-name>
        <servlet-class>cn.com.libery.servlet.ConfigServlet</servlet-class>
        <!--        初始化参数的配置-->
        <init-param>
            <param-name>userName</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ConfigServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <!--在web.xml中配置ServletContext初始化参数 -->
    <context-param>
        <param-name>username</param-name>
        <param-value>scott</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>tiger</param-value>
    </context-param>


    <servlet>
        <servlet-name>ContextServlet</servlet-name>
        <servlet-class>cn.com.libery.servlet.ContextServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContextServlet</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>

</web-app>